<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/feed_background"
    tools:context=".css_tag13">
<TextView
    android:id="@+id/vv1"
    android:layout_width="wrap_content"
    android:layout_height="120dp"
    android:text="CSS Align"
    android:paddingTop="50dp"
    android:textColor="#ffffff"
    android:textSize="24sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    tools:ignore="MissingConstraints" />

<ScrollView
    android:id="@+id/scrollV"
    android:layout_width="match_parent"
    android:layout_height="480dp"
    android:scrollbars="vertical"
    android:fitsSystemWindows="true"

    app:layout_constraintTop_toBottomOf="@id/vv1">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/t1"
            android:layout_width="match_parent"
            android:layout_marginTop="8dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/green"
            android:text="Center Align Elements"
            android:textSize="25sp"
            app:layout_constraintStart_toStartOf="parent"

            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="101dp"
            tools:layout_editor_absoluteY="3dp" />
        <TextView
            android:id="@+id/t11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:text="@string/centerAlign"
            app:layout_constraintTop_toBottomOf="@+id/t1"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="4dp" />
        <TextView
            android:id="@+id/t111"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:textColor="@color/teal"
            android:text="Example"

            app:layout_constraintTop_toBottomOf="@+id/t11"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="4dp" />
        <TextView
            android:id="@+id/t1111"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:text="@string/centerAlignEx"
            app:layout_constraintTop_toBottomOf="@+id/t111"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="4dp" />

        <View
            android:id="@+id/v1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="8dp"
            android:background="@color/gray"
            app:layout_constraintTop_toBottomOf="@+id/t1111"
            tools:ignore="MissingConstraints" />
        <TextView
            android:id="@+id/t2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/green"
            android:text="Center Align Text"
            android:textSize="25sp"
            app:layout_constraintTop_toBottomOf="@+id/v1"

            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="101dp"
            tools:layout_editor_absoluteY="3dp" />
        <TextView
            android:id="@+id/t22"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:text="To just center the text inside an element, use text-align: center;"
            app:layout_constraintTop_toBottomOf="@+id/t2"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="4dp" />
        <TextView
            android:id="@+id/t222"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:textColor="@color/teal"
            android:text="Example"

            app:layout_constraintTop_toBottomOf="@+id/t22"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="4dp" />
        <TextView
            android:id="@+id/t2222"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:text=".center {\n
    text-align: center;\n
    border: 3px solid green;\n
}"
            app:layout_constraintTop_toBottomOf="@+id/t222"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="4dp" />
        <View
            android:id="@+id/v2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="8dp"
            android:background="@color/gray"
            app:layout_constraintTop_toBottomOf="@+id/t2222"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/t3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/green"
            android:text="Center an Image"
            android:textSize="25sp"
            app:layout_constraintTop_toBottomOf="@+id/v2"

            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="101dp"
            tools:layout_editor_absoluteY="3dp" />
        <TextView
            android:id="@+id/t33"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:text="To center an image, set left and right margin to auto and make it into a block element:"
            app:layout_constraintTop_toBottomOf="@+id/t3"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="4dp" />
        <ImageView
            android:id="@+id/t34"
            android:layout_width="wrap_content"
            android:layout_height="160dp"
            android:src="@drawable/app"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/t33"
            tools:ignore="MissingConstraints" />
        <TextView
            android:id="@+id/t333"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:textColor="@color/teal"
            android:text="Example"

            app:layout_constraintTop_toBottomOf="@+id/t34"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="4dp" />
        <TextView
            android:id="@+id/t3333"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:text="img {\n
    display: block;\n
    margin-left: auto;\n
    margin-right: auto;\n
    width: 40%;\n
}"
            app:layout_constraintTop_toBottomOf="@+id/t333"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="4dp" />
        <View
            android:id="@+id/v3"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="8dp"
            android:background="@color/gray"
            app:layout_constraintTop_toBottomOf="@+id/t3333"
            tools:ignore="MissingConstraints" />
        <TextView
            android:id="@+id/t4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/green"
            android:text="Left and Right Align"
            android:textSize="25sp"

            app:layout_constraintTop_toBottomOf="@+id/v3"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="101dp"
            tools:layout_editor_absoluteY="3dp" />
        <TextView
            android:id="@+id/t44"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:text="One method for aligning elements is to use position: absolute;\n
also we can use position"
            app:layout_constraintTop_toBottomOf="@+id/t4"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="4dp" />
        <TextView
            android:id="@+id/t444"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:textColor="@color/teal"
            android:text="Example"

            app:layout_constraintTop_toBottomOf="@+id/t44"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="4dp" />
        <TextView
            android:id="@+id/t4444"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:text="@string/positionAlignCssEx"
            app:layout_constraintTop_toBottomOf="@+id/t444"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="4dp" />
        <View
            android:id="@+id/v4"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="8dp"
            android:background="@color/gray"
            app:layout_constraintTop_toBottomOf="@+id/t4444"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/t5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/green"
            android:text="Left and Right Align - Using float"
            android:textSize="25sp"

            app:layout_constraintTop_toBottomOf="@+id/v4"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="101dp"
            tools:layout_editor_absoluteY="3dp" />
        <TextView
            android:id="@+id/t55"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:text="Another method for aligning elements is to use the float property:"
            app:layout_constraintTop_toBottomOf="@+id/t5"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="4dp" />
        <TextView
            android:id="@+id/t555"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:textColor="@color/teal"
            android:text="Example"

            app:layout_constraintTop_toBottomOf="@+id/t55"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="4dp" />
        <TextView
            android:id="@+id/t5555"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:text=".right {\n
    float: right;\n
    width: 300px;\n
    border: 3px solid #73AD21;\n
    padding: 10px;\n
}"
            app:layout_constraintTop_toBottomOf="@+id/t555"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="4dp" />
        <View
            android:id="@+id/v5"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="8dp"
            android:background="@color/gray"
            app:layout_constraintTop_toBottomOf="@+id/t5555"
            tools:ignore="MissingConstraints" />
        <TextView
            android:id="@+id/t6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/v5"
            android:text="Center Vertically - Using padding"
            android:textColor="@color/colorAccent"
            android:textSize="25sp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="101dp"
            tools:layout_editor_absoluteY="3dp" />
        <TextView
            android:id="@+id/t64"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:text="There are many ways to center an element vertically in CSS. A simple solution is to use top and bottom padding:"
            app:layout_constraintTop_toBottomOf="@+id/t6"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="4dp" />
        <TextView
            android:id="@+id/t666"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:textColor="@color/teal"
            android:text="Example"

            app:layout_constraintTop_toBottomOf="@+id/t64"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="4dp" />
        <TextView
            android:id="@+id/t6666"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:text="@string/centerAlignUsingpaddingEx"

            app:layout_constraintTop_toBottomOf="@+id/t666"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="4dp" />

        <View
            android:id="@+id/v6"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="8dp"
            android:background="@color/gray"
            app:layout_constraintTop_toBottomOf="@+id/t6666"
            tools:ignore="MissingConstraints" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>